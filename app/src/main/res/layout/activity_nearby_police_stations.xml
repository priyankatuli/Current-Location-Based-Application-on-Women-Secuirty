<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NearbyPoliceStationsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/color3"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            tools:ignore="Orientation">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00000000"
                app:cardElevation="8dp"
                app:cardCornerRadius="17dp"
                android:layout_margin="20dp"
                android:clickable="true"
                android:id="@+id/AddPoliceStationNumber"
                tools:ignore="InvalidId">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:background="@color/color4"
                    android:text="Top three nearest police stations"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:clickable="false"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color4"
                app:cardElevation="8dp"
                app:cardCornerRadius="17dp"
                android:layout_margin="20dp"
                android:clickable="false"
                android:id="@+id/FirstPoliceStationId"
                android:visibility="invisible"
                tools:ignore="InvalidId">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="250sp"
                        android:layout_height="100dp"
                        android:gravity="left"
                        android:id="@+id/PSName1"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:layout_marginTop="15sp"
                        android:layout_marginLeft="10sp"
                        />
                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="45sp"
                        android:id="@+id/policeCall1"
                        android:src="@drawable/telephonecall"
                        android:clickable="true"
                        android:layout_alignRight="@id/PSName1"
                        android:layout_marginTop="18sp"
                        android:layout_alignParentEnd="true">

                    </ImageView>
                    <ImageView
                        android:layout_width="70sp"
                        android:background="@color/color4"
                        android:id="@+id/policeMssg1"
                        android:clickable="true"
                        android:layout_height="45sp"
                        android:layout_marginTop="18sp"
                        android:src="@drawable/baseline_email_24"
                        android:layout_alignRight="@id/PSName1">

                    </ImageView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color4"
                app:cardElevation="8dp"
                app:cardCornerRadius="17dp"
                android:layout_margin="20dp"
                android:clickable="false"
                android:visibility="invisible"
                android:id="@+id/SecondPoliceStationId"
                tools:ignore="InvalidId">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="250sp"
                        android:layout_height="100dp"
                        android:gravity="left"
                        android:id="@+id/PSName2"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:layout_marginTop="15sp"
                        android:layout_marginLeft="10sp"
                        />
                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="45sp"
                        android:id="@+id/policeCall2"
                        android:src="@drawable/telephonecall"
                        android:clickable="true"
                        android:layout_alignRight="@id/PSName2"
                        android:layout_marginTop="18sp"
                        android:layout_alignParentEnd="true">

                    </ImageView>
                    <ImageView
                        android:layout_width="70sp"
                        android:background="@color/color4"
                        android:id="@+id/policeMssg2"
                        android:clickable="true"
                        android:layout_height="45sp"
                        android:layout_marginTop="18sp"
                        android:src="@drawable/baseline_email_24"
                        android:layout_alignRight="@id/PSName2">

                    </ImageView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color4"
                app:cardElevation="8dp"
                app:cardCornerRadius="17dp"
                android:layout_margin="20dp"
                android:id="@+id/ThirdPoliceStationId"
                android:visibility="invisible"
                android:clickable="false"
                tools:ignore="InvalidId">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="250sp"
                        android:layout_height="100dp"
                        android:gravity="left"
                        android:id="@+id/PSName3"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:layout_marginTop="15sp"
                        android:layout_marginLeft="10sp"
                        />
                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="45sp"
                        android:id="@+id/policeCall3"
                        android:src="@drawable/telephonecall"
                        android:clickable="true"
                        android:layout_alignRight="@id/PSName3"
                        android:layout_marginTop="18sp"
                        android:layout_alignParentEnd="true">

                    </ImageView>
                    <ImageView
                        android:layout_width="70sp"
                        android:background="@color/color4"
                        android:id="@+id/policeMssg3"
                        android:clickable="true"
                        android:layout_height="45sp"
                        android:layout_marginTop="18sp"
                        android:src="@drawable/baseline_email_24"
                        android:layout_alignRight="@id/PSName3">

                    </ImageView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>