<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color3"
    tools:context=".profileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            tools:ignore="Orientation">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00000000"
                app:cardElevation="8dp"
                app:cardCornerRadius="17dp"
                android:layout_margin="10dp"
                android:clickable="false"
                tools:ignore="InvalidId">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color1">

                    <TextView
                        android:layout_width="343dp"
                        android:layout_height="match_parent"
                        android:text="Profile Info"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:padding="20dp"
                        android:gravity="center"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:background="@color/color3">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_account_circle_24"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add name"
                    android:id="@+id/profileName"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@color/color3">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="46dp"
                    android:src="@drawable/age_icon"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add age"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/profileAge"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="21dp"
                android:background="@color/color3">

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/date_of_birth_icon"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add date of birth"
                    android:id="@+id/profileDob"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@color/color3">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_email_black"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add email"
                    android:id="@+id/profileEmail"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@color/color3">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_phone_iphone_24"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add phone number"
                    android:id="@+id/profilePhone"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/updateProfileBtn"
                android:text="Update Profile"
                android:layout_marginTop="50dp">

            </Button>
        </LinearLayout>
    </ScrollView>


</FrameLayout>